<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" styleClass="main-view-root">

    <VBox fx:id="navBar" styleClass="nav-bar">
        <ImageView fx:id="logoImageView" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
        </ImageView>

        <VBox spacing="20" alignment="CENTER">
            <Button fx:id="homeButton" onAction="#onHomeClick" styleClass="nav-button" />
            <Button fx:id="previewButton" onAction="#onPreviewClick" styleClass="nav-button" />
            <Button fx:id="postsButton" onAction="#onPostsClick" styleClass="nav-button" />
        </VBox>

        <Region VBox.vgrow="ALWAYS" />

        <Button fx:id="settingsButton" onAction="#onSettingsClick" styleClass="nav-button" />
        <Label fx:id="versionLabel" styleClass="version-label" text="v2.0.0">
            <VBox.margin>
                <Insets top="5.0" bottom="10.0"/>
            </VBox.margin>
        </Label>
    </VBox>

    <VBox fx:id="contentContainer" HBox.hgrow="ALWAYS" styleClass="content-container">
        <Label fx:id="titleLabel" styleClass="content-title" text="Home">
            <VBox.margin>
                <Insets top="20.0" left="20.0" right="20.0" bottom="10.0"/>
            </VBox.margin>
        </Label>
        <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS" styleClass="content-area">
            <VBox.margin>
                <Insets left="20.0" right="20.0" bottom="20"/>
            </VBox.margin>
        </StackPane>
    </VBox>
</HBox>