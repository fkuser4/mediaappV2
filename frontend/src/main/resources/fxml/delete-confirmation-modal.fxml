<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="delete-modal" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox styleClass="delete-modal-header">
            <children>
                <Label styleClass="delete-modal-title" text="Delete Post" />
            </children>
        </VBox>
        <VBox styleClass="delete-modal-content" alignment="CENTER">
            <children>
                <Label styleClass="delete-modal-message" text="Are you sure you want to permanently delete this post?" />
                <Label fx:id="postTitleLabel" styleClass="delete-post-title" text="Post Title" />
                <Label styleClass="delete-modal-message" text="This action cannot be undone." />
            </children>
        </VBox>
        <HBox styleClass="delete-modal-footer">
            <children>
                <Button fx:id="cancelButton" styleClass="delete-cancel-button" text="Cancel" onAction="#handleCancel" />
                <Button fx:id="deleteButton" styleClass="delete-confirm-button" text="Delete" onAction="#handleDelete" />
            </children>
        </HBox>
    </children>
</VBox>
