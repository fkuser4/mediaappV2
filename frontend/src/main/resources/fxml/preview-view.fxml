<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<SplitPane dividerPositions="0.3" style="-fx-background-color: #1f1f27;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" >
    <items>
        <VBox style="-fx-background-color: #19191d; -fx-padding: 16;" spacing="12.0"
              minWidth="250" maxWidth="600">
            <children>
                <Label text="Select a Post to Preview" style="-fx-font-size: 18px; -fx-font-family: 'Inter Bold'; -fx-text-fill: white;" />
                <TextField fx:id="searchField" promptText="Search posts by title..." styleClass="field-input" />
                <ListView fx:id="postListView" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>

        <WebView fx:id="webView" minWidth="400" />
    </items>
</SplitPane>