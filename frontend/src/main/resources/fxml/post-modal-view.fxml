<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="modal-overlay" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox styleClass="view-modal" maxHeight="600" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
            <children>
                <HBox styleClass="view-modal-header" alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label fx:id="postTitleLabel" styleClass="view-modal-title" text="Post Title" HBox.hgrow="ALWAYS" />
                        <Button fx:id="closeButton" styleClass="modal-close-button" mnemonicParsing="false" onAction="#handleClose" />
                    </children>
                </HBox>
                <ScrollPane styleClass="modal-content-scroll" fitToWidth="true" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox styleClass="view-modal-content">
                            <children>
                                <VBox styleClass="view-field-container">
                                    <children>
                                        <Label styleClass="view-field-label" text="Content" />
                                        <TextArea fx:id="contentDisplay" styleClass="view-content-area" editable="false" wrapText="true" />
                                    </children>
                                </VBox>
                                <VBox styleClass="view-field-container">
                                    <children>
                                        <Label styleClass="view-field-label" text="Publish Date" />
                                        <Label fx:id="publishDateLabel" styleClass="view-field-value" />
                                    </children>
                                </VBox>
                                <VBox styleClass="view-field-container">
                                    <children>
                                        <Label styleClass="view-field-label" text="Status" />
                                        <ComboBox fx:id="statusCombo" styleClass="status-combo" />
                                    </children>
                                </VBox>
                                <VBox styleClass="view-field-container">
                                    <children>
                                        <Label styleClass="view-field-label" text="Platforms" />
                                        <FlowPane fx:id="platformDisplay" styleClass="platform-display" />
                                    </children>
                                </VBox>
                                <VBox fx:id="mediaSection" styleClass="view-field-container">
                                    <children>
                                        <Label fx:id="mediaLabel" styleClass="view-field-label" text="Media" />
                                        <HBox fx:id="linkDisplay" styleClass="link-display" managed="false" visible="false">
                                            <children>
                                                <Label fx:id="linkUrlLabel" styleClass="link-url" />
                                            </children>
                                        </HBox>
                                        <ScrollPane fx:id="mediaGridScroll" styleClass="view-media-grid-scroll" managed="false" visible="false" fitToWidth="true">
                                            <content>
                                                <FlowPane fx:id="mediaGrid" styleClass="view-media-grid" />
                                            </content>
                                        </ScrollPane>
                                        <Label fx:id="noMediaLabel" styleClass="no-media-label" text="No media attached" managed="false" visible="false" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
                <HBox styleClass="view-modal-footer">
                    <children>
                        <Button fx:id="closeViewButton" styleClass="close-view-button" text="Close" onAction="#handleClose" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>